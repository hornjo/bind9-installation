{% for zone, records in bind9_zones_forward.items() %}
zone "{{ zone }}" {
    type primary;
    file "/etc/bind/{{ zone }}";
};
{% endfor %}

{% for zone, records in bind9_zones_reverse.items() %}
zone "{{ zone }}" {
    type primary;
    file "/etc/bind/{{ zone }}";
};
{% endfor %}

{% for item in bind9_zones_remote %}
zone "{{ item.domain }}" {
    type forward;
    forwarders {
        {{ item.remote_dns }};
    };
    forward only;
};
{% endfor %}